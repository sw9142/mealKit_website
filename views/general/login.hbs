
<section class="loginpage">
  <div class="loginpage_img">
<img src="/3.jpg">
</div>
 <div class="formcontainer">
  <div class="loginpage-title">WELCOME</div>

{{#if messageValidation.login}}
<span id="msglogin" style="color: red;">{{messageValidation.login}}</span>
{{/if}}

  <form action="/login" method="post" class="loginform" >
  <input id="email" type="email" name="email" placeholder="Email Address" autofocus  value="{{value.email}}"> 
  {{#if messageValidation.email}}
    <p id="validationMsg">{{messageValidation.email}}</p>
  {{/if }}
  <input id="password" type="password" name="password" placeholder="Password" value="{{value.password}}">
  {{#if messageValidation.password}}
    <p id="validationMsg">{{messageValidation.password}}</p>
  {{/if }}
  <button id="submit" type="submit"  name="submit">LOG IN</button>


  <div class="authenticationwrapper">
  <input class="authentication"  type="radio" name="authe" value="customer" ><label for="customer">Customer</label>
  <input class="authentication" type="radio" name="authe" value="dataClerk"><label for="dataclerk"> Data Entry Clerk</label>
  </div>

  </form>


    <div class="noaccount">
     <div class="noaccount-title">  <a href="/reg">No Account?</a></div>
    </div>

 </div>
</section>
